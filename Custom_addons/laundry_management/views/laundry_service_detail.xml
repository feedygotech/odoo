<odoo>
  <template id="laundry_service_detail" name="Laundry Service Detail">
    <t t-call="website.layout">

      <!-- Hero Section with Background Image -->
      
        <div class="p-4">
          <a href="/our-services"
            class="btn mb-0.5 rounded-pill fw-semibold"
            style="background-color: white; color: #0b3555; border: 2px solid #0b3555; margin-left: 80px;">
            <i class="fa fa-arrow-left me-2"></i>Back to Services
          </a>
        </div>
          
          <div class="position-relative" t-attf-style="background: url('/web/image/laundry.service/{{ service.id }}/image') center center / cover no-repeat; min-height: 500px; max-height: 700px;">
            
            <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(0, 0, 0, 0.1); z-index: 1;"></div>

            <div class="position-relative text-white py-5" style="z-index: 2; text-align:left;">
             <div class="container">
                <h1 class="display-4 fw-bold">
                  <t t-esc="service.name"/>
                </h1>
                <t t-if="service.tagline">
                  <p class="fs-3">
                    <t t-esc="service.tagline"/>
                  </p>
                </t>
             </div>
          </div>
         </div> 

      <!-- Overview + Features Section -->
      <div class="container my-5 gap-5">
        <div class="row gy-5 align-items-start">
          <!-- Overview -->
          <div class="col-md-6">
            <h2 class="fw-bold mb-3" style="color:#1C3E5E">Service Overview</h2>
            <p class="fs-5 pr-2 py-2" style="text-align: justify; line-height: 1.5;">
              <t t-if="service.overview">
                <t t-esc="service.overview"/>
              </t>
              <t t-else="">No overview available.</t>
            </p>
          </div>

          <!-- Features -->
          <t t-if="features">
            <div class="col-md-6">
              <div class="p-4 border rounded-4 shadow bg-white h-100" style="margin-left:0.25rem;">
                <h2 class="fw-bold fs-3 mb-3 pt-1 pb-1" style="color:#1C3E5E">Service Features</h2>
                <ul class="list-unstyled fs-6">
                  <t t-foreach="features" t-as="feature">
                    <li class="mb-3 d-flex align-items-start">
                      <span class="me-3">
                        <i class="fa fa-snowflake-o fa-sm" style="color:#1C3E5E"></i>
                      </span>
                      <span><t t-esc="feature.name"/></span>
                    </li>
                  </t>
                </ul>
              </div>
            </div>
          </t>
        </div>
      </div>

      <!-- Full Description Section -->

      <t t-if="service.description">
       <div class="detail-description container py-2 my-3 rounded-4 shadow-sm">
         <div class="fs-5 lh-lg px-md-4">
           <t t-raw="service.description"/>
         </div>
       </div>
      </t>

      <!-- Benefits Section -->
      <div class="container my-5">
        <t t-if="benefits">
          <div class="col-md-6">
            <div class="p-4 border rounded-4 shadow bg-white h-100">
              <h2 class="fw-bold fs-3 mb-3" style="color:#1C3E5E">Service Benefits</h2>
              <ul class="list-unstyled fs-6">
                <t t-foreach="benefits" t-as="benefit">
                  <li class="mb-3 d-flex align-items-start">
                    <span class="me-3">
                      <i class="fa fa-eercast fa-5" style="color:#1C3E5E"></i>
                    </span>
                    <div>
                      <span><t t-esc="benefit.name"/></span>
                    </div>
                  </li>
                </t>
              </ul>
            </div>
          </div>
        </t>
        </div>
      <!-- CTA Section -->
      <div class="bg-secondary-subtle py-5 mt-5">
        <div class="container">
          <div class="row align-items-center justify-content-between">
            <div class="col-md-8 text-md-start text-center mb-4 mb-md-0">
              <h2 class="fw-bold mb-2 fs-2" style="color:#1C3E5E">Ready to Get Started?</h2>
              <p class="text-muted fs-5 mb-0">
                Contact us for custom pricing on bulk orders or special requirements.
              </p>
            </div>

            <div class="col-md-4 text-center">
              <a href="/contactus" class="btn btn-lg px-4 py-2 rounded-pill bg-white fw-bold" style="color:#1C3E5E;">
                Contact us
              </a>
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>
</odoo>
